<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="13">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="New Text"
        android:id="@+id/LecturaTxtRuta"
        android:gravity="bottom|center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New Text"
            android:id="@+id/LecturaTxtCuenta"
            android:gravity="bottom|center"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New Text"
            android:id="@+id/LecturaTxtMedidor"
            android:gravity="bottom|center"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="New Text"
        android:id="@+id/LecturaTxtNombre"
        android:gravity="bottom"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="New Text"
        android:id="@+id/LecturaTxtDireccion"
        android:gravity="bottom"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/TxtTipoUso"
            android:id="@+id/LecturaTxtTipoUso"
            android:gravity="center_vertical|right"
            android:textSize="15dp"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/LecturaSpnTipoUso" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/TxtAnomalia"
            android:id="@+id/LecturaTxtAnomalia"
            android:gravity="center_vertical|right"
            android:textSize="15dp"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/LecturaSpnAnomalia"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/TxtLectura1"
            android:id="@+id/LecturaTxtLectura1"
            android:gravity="bottom|right"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:id="@+id/LecturaEditLectura1"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/TxtLectura2"
            android:id="@+id/LecturaTxtLectura2"
            android:gravity="bottom|right"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:id="@+id/LecturaEditLectura2"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/TxtLectura3"
            android:id="@+id/LecturaTxtLectura3"
            android:gravity="center_vertical|right"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:id="@+id/LecturaEditLectura3"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/TxtMensaje"
            android:id="@+id/LecturaTxtMensaje"
            android:gravity="bottom|left"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:id="@+id/LecturaEditMensaje"
            android:layout_weight="3"
            android:gravity="top" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="6"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/LecturasBtnGuardar"
            android:id="@+id/LecturasBtnGuardar"
            android:gravity="center" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/LecturasBtnImprimir"
            android:id="@+id/LecturasBtnImprimir"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
